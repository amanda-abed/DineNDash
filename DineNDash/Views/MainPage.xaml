<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DineNDash"
    x:Class="DineNDash.Views.MainPage"
    xmlns:prismBehaviors="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:googleMaps="clr-namespace:Xamarin.Forms.GoogleMaps;assembly=Xamarin.Forms.GoogleMaps"
    xmlns:bindings="clr-namespace:Xamarin.Forms.GoogleMaps.Bindings;assembly=Xamarin.Forms.GoogleMaps.Bindings"
    BackgroundImage="Telegram.png">
    <!--Style="{StaticResource PageStyle}">-->
    <StackLayout
        Padding="0, 15, 0, 15">
        <Grid
            VerticalOptions="StartAndExpand"
            HorizontalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="*" />
                <RowDefinition
                    Height="2*" />
                <RowDefinition
                    Height="5*" />
                <RowDefinition
                    Height="2*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="auto" />
            </Grid.ColumnDefinitions>
           
            <Label
                Text="To begin your order please select a restaurant"
                Grid.Row="0"
                Grid.Column="0"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                FontSize="20"
                FontAttributes="Bold"
                TextColor="White"/>
            <StackLayout
                Grid.Row="1"
                Grid.Column="0"
                Padding="0, 10, 0, 10">
                <SearchBar
                    Text="{Binding EnterRestaurant}"
                    Placeholder="Search Restaurant"
                    PlaceholderColor="Gray"
                    SearchCommand="{Binding searchActivated}"
                    BackgroundColor="White"
                    CancelButtonColor="Silver"/>
                <ListView
                    ItemsSource="{Binding Suggestions}"
                    IsVisible="{Binding IsVisible}">
                    <ListView.Behaviors>
                        <prismBehaviors:EventToCommandBehavior
                            EventName="ItemTapped"
                            Command="{Binding SuggestionTappedCommand}"
                            EventArgsParameterPath="Item" />
                    </ListView.Behaviors>
                </ListView>
            </StackLayout>
             <googleMaps:Map
                     InitialCameraUpdate="33.1372, -117.1772, 13, 30, 0"
                     MapType="Street"
                     VerticalOptions="FillAndExpand"
                     Grid.Row="2">
                    <googleMaps:Map.Behaviors>
                        <bindings:BindingPinsBehavior Value="{Binding Pins}"/>    
                        <bindings:MapClickedToCommandBehavior Command="{Binding MapClickedCommand}"/>
                    </googleMaps:Map.Behaviors>
              </googleMaps:Map>
            <Button
                Text="Restaurant Side"
                Command="{Binding GoToRestaurantSide}"
                Grid.Row="3"
                Grid.Column="0"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="End"
                TextColor="White"/>
        </Grid>
    </StackLayout>
</ContentPage>